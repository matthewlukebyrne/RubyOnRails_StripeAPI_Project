<div class="card" style="width: 18rem;">
  <%= image_tag("react_logo.png", class: "card-img-top", alt: "ReactCourseLogo" ) %>
  <div class="card-body pt-5">
    <h5 class="card-title">React for Beginner ⚛️</h5>
    <p class="card-text">A beginners guide to React and the library provided by Facebook! Hooks, functions, promises and more...</p>
  </div>
  <div class="card-body">
    <!-- Stripe API form data -->
  <% if user_signed_in? %>
  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p>
            <%= flash[:error] %>
          </p>
        </div>
        <% end %>
          <label class="amount">
              <span>Amount: €5.00</span>
            </label>
          <br>
    </article>

    <script 
      src="https://checkout.stripe.com/checkout.js"         
      class="stripe-button"
      data-label="Buy Now"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>" 
      data-description="React for Beginners ⚛️"
      data-amount="500" 
      data-locale="auto">
    </script>
    <% end %>
    <% end %>
  </div>
</div>